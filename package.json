  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna run prepare",
    "start:initial-swagger": "lerna run --scope=@open-source-quality-app/initial-swagger --stream start",
    "start:web": "cd packages/web && yarn start",
    "start:api": "cd packages/api && yarn start",
    "test": "jest",
