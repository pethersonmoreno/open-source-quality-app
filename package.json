    "test:coverage": "jest --coverage",
    "test:watch-coverage": "jest --coverage --watch-all"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "dependencies": {
    "lerna": "^3.22.1"
  }
